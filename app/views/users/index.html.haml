%p#notice= notice
.container
  %h1 Users
  = link_to 'New User', new_user_path
  .row
    - @users.each do |user|
      .col-lg-6.col-md-6.col-sm-6.col-xs-12
        Username
        = user.username
      .col-lg-6.col-md-6.col-sm-6.col-xs-12
        Image url
        = user.image_url
        %br
        = link_to 'Show', user
        = link_to 'Edit', edit_user_path(user)
        = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }